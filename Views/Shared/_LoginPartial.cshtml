@using Microsoft.AspNetCore.Identity
@inject SignInManager<CinemaWebsiteUser> SignInManager
@inject UserManager<CinemaWebsiteUser> UserManager

<ul class="navbar-nav me-auto">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserAsync(User).Result.Email </a>
    </li>
    <li class="nav-item">
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Movies", new { area = "" })">
            <button  type="submit" class="nav-link active">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
