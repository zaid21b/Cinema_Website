@model  Cinema_Website.Models.Movie
@{ 
    ViewData["Title"] = "Contact";
}



<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Contact
        <small>Subheading</small>
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item active">Contact</li>
    </ol>
    <div class="row">
        <!-- Map Column -->
        <div class="col-lg-8 mb-4 " style="border: solid 10px #1d3746; padding: 0px">
            <!-- Embedded Google Map -->
            <iframe class="z-depth-1-half map-container" width="100%" height="500" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" style="border:0" allowfullscreen referrerpolicy="no-referrer-when-downgrade" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d433870.8267820615!2d35.66744106019394!3d31.835453335154707!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151b5fb85d7981af%3A0x631c30c0f8dc65e8!2sAmman!5e0!3m2!1sen!2sjo!4v1654537488957!5m2!1sen!2sjo"></iframe>
        </div>

        <!-- Contact Details Column -->
        <div class="col-lg-4 mb-4">
            <h3>Contact Details</h3>
            <p>
                3481 Melrose Place
                <br>Beverly Hills, CA 90210
                <br>
            </p>
            <p>
                <abbr title="Phone">P</abbr>: (123) 456-7890
            </p>
            <p>
                <abbr title="Email">E</abbr>:
                <a href="mailto:name@example.com">
                    name@example.com
                </a>
            </p>
            <p>
                <abbr title="Hours">H</abbr>: Monday - Friday: 9:00 AM to 5:00 PM
            </p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mb-4">
            <h3>Send us  message</h3>
            <form name="sentMessge" class="contact-form" novalidate method="post">
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Full Name:</label>
                        <input class="form-control" type="text" />
                        <p class="help-block"></p>
                    </div>
                </div>

                <div class="control-group form-group">
                    <div class="controls">
                        <label>Phone Number:</label>
                        <input class="form-control" type="tel" />
                        <p class="help-block"></p>
                    </div>

                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Email Address:</label>
                            <input class="form-control" type="email" />
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Message:</label>
                            <textarea rows="10" cols="100" class="form-control"></textarea>
                        </div>
                    </div>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Send Message</button>

                </div>
            </form>
        </div>



        <div class="col-lg-4 mb-4">
            <span class="circle">
                <i class='fas fa-map-marker-alt' style='font-size:48px;color:grey'></i>
            </span>
            <h4 class="no-underline">Address</h4>
            <p>Taj Mall, Abdoun Circle, Abdoun Region</p>



            <div>
                <span class="circle">
                    <i class="fa fa-envelope" style="font-size:48px;color:grey"></i>
                </span>
                <h4 class="no-underline">Emails</h4>
                <p>
                    <a href="mailto:marketing@tajcinemas.com">marketing@tajcinemas.com</a>
                    <a href="mailto:management@tajcinemas.com">management@tajcinemas.com</a>
                    <a href="mailto:admin@tajcinemas.com">admin@tajcinemas.com</a>

                </p>
            </div>

            <div>
                <span class="circle">
                    <i class="fa fa-phone" style="font-size:48px;color:grey"></i>
                </span>
                <h4 class="no-underline">Telephone</h4>
                <a href="tel:+96265927555">+962 6 592 7555</a>
            </div>

        </div>
    </div>
</div>