@model Cinema_Website.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-MovieId="@ViewBag.MovieId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" hidden>
                <label asp-for="EventId" class="control-label"></label>
                <input asp-for="EventId" class="form-control" value="@ViewBag.EventId" />
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label"></label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter The Number Of Tickets That You Want To Create</label>
                <input type="number" name="nTicket" id="nTicketId" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Enter The Number Of cool plus Tickets</label>
                <input type="number" name="ncoolplusTicket" id="ncoolplusTicketId" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Enter The price of cool plus tickets</label>
                <input type="number" name="priceTicket" id="priceTicketId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
