@model Cinema_Website.Models.Hall

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HadllId" />
            <div class="form-group">
                <label asp-for="HallNumber" class="control-label"></label>
                <input asp-for="HallNumber" class="form-control" />
                <span asp-validation-for="HallNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
